<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/chat_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/chat_title"
        android:background="@color/black"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/chat_return"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="3dp"
            android:background="@mipmap/return_forylyw"
            tools:ignore="NestedWeights"
             />
        <TextView
            android:id="@+id/chat_friendname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="27sp"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/chat_friendmessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="3dp"
            android:background="@mipmap/link_man"
            android:contentDescription="TODO" />

    </LinearLayout>

    <ListView
        android:id="@+id/chatroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_title"
        android:layout_above="@+id/chat_way"
        android:divider="#0000"
        android:dividerHeight="8dp"
        android:scrollbars="none" />

    <LinearLayout
        android:id="@+id/chat_way"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/chat_voice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="2dp"
            android:background="@mipmap/voice_tube"
            tools:ignore="NestedWeights"
            android:contentDescription="TODO" />

        <EditText
            android:id="@+id/chat_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_margin="2dp"
            android:focusableInTouchMode="true"
            android:layout_weight="2"
            android:focusable="true" />
        <ImageView
            android:id="@+id/chat_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="2dp"
            android:background="@mipmap/lau"
            android:contentDescription="TODO" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/chat_send"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="@string/send"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/green"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/chat_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/jiahao">
            </ImageView>
        </LinearLayout>

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/gray"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_emotion_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <com.example.yang.myapplication.NoHorizontalScrollerViewPager
            android:id="@+id/vp_emotionview_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_horizontal_line_color" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/high_funtion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/funtionviewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bg_horizontal_line_color" />
    </LinearLayout>


</LinearLayout>
