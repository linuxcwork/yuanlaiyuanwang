<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/person_setting_return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/return_forylyw"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_20"
            android:text="@string/setting"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/setting_account_and_secure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_20"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/account_and_secure"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/return_forylyw"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/apk_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_20"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/apk_information"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/return_forylyw"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_help_and_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_20"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/help_and_feedback"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/return_forylyw"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/exit_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_20"
            android:layout_centerInParent="true"
            android:text="@string/exit_login"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp" />
    </RelativeLayout>
</LinearLayout>
