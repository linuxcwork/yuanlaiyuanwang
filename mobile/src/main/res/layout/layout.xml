<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/darkgrey">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="34dp"
            android:textColor="@color/white"
            android:background="@color/darkgrey"
            android:text="@string/app_name" />

        <ImageButton
            android:id="@+id/imageButton_sercher"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/tianjia_main"
            android:layout_weight="1"
            android:background="@android:drawable/ic_menu_search" />

        <ImageButton
            android:id="@+id/tianjia_main"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:background="@android:drawable/ic_input_add" />


    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/fragment_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="10"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/signal_main_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@mipmap/signal"
                android:onClick="onClick" />
            <TextView
                android:id="@+id/signal_main_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/signal_main"
                android:layout_weight="2"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/linkman_main_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@mipmap/ic_launcher"/>
            <TextView
                android:id="@+id/linkman_main_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/linkman_main"
                android:layout_weight="2"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/life_main_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@mipmap/life"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/life_main_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/life_main"
                android:layout_weight="2"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/own_main_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:background="@mipmap/own_launcher"/>
            <TextView
                android:id="@+id/own_main_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/own_main"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
